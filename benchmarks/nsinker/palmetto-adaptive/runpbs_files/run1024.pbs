#!/bin/bash                                                                                                      
#PBS -l select=64:ncpus=16:mpiprocs=16:chip_type=e5-2665:interconnect=fdr:mem=61gb                                   
#PBS -l walltime=1:00:00                                                                                            
#PBS -j oe                                                                                                          
#PBS -N test                                                                                                        
##PBS -q compmath                                                                                                   

# load profile and modules:                                                                                         
source /etc/profile.d/modules.sh
source ~/.bash_profile
source /home/heister/shared-dealii/modules_9.0.0pre1

ulimit -c 0

# compute processor count and print it:                                                                             
Nproc=`qstat -xf $PBS_JOBID | grep List.ncpus | sed 's/^.\{26\}//'`
cd $PBS_O_WORKDIR
echo "Job $PBS_JOBID started at `date` on `hostname` using $Nproc processors"
echo
echo

cd ../../

echo "MatrixFree, 4 sinkers, 1e4 visc jump"
cp adaptive_mf.prm temp1024a.prm

echo "subsection Mesh refinement" >> temp1024a.prm
echo "  set Initial global refinement = 2" >> temp1024a.prm
echo "  set Initial adaptive refinement = 12" >> temp1024a.prm 
echo "end" >> temp1024a.prm
        
echo "set Output directory = output/adaptive-mf-1024" >> temp1024a.prm
echo "set Timing output directory = timings-on-palmetto/" >> temp1024a.prm
mpirun -np $Nproc ./aspect temp1024a.prm 
rm temp1024a.prm



echo "MatrixBased, 4 sinkers, 1e4 visc jump"
cp adaptive_mb.prm temp1024a.prm

echo "subsection Mesh refinement" >> temp1024a.prm
echo "  set Initial global refinement = 2" >> temp1024a.prm
echo "  set Initial adaptive refinement = 12" >> temp1024a.prm  
echo "end" >> temp1024a.prm
        
echo "set Output directory = output/adaptive-mb-1024" >> temp1024a.prm
echo "set Timing output directory = timings-on-palmetto/" >> temp1024a.prm
mpirun -np $Nproc ./aspect temp1024a.prm 
rm temp1024a.prm

